apiVersion: apps/v1
kind: Deployment
metadata:
  name: ticketing-app-deployment
  labels:
    app: ticketing-app
spec:
  replicas: 3
  selector:
    matchLabels:
      app: ticketing-app
  template:
    metadata:
      labels:
        app: ticketing-app
    spec:
      containers:
      - name: ticketing-app
        # Ansible will inject the full ECR path and dynamic tag here
        image: "{{ image_full_uri }}" 
        ports:
        - containerPort: 4000
        - containerPort: 9090

---

apiVersion: v1
kind: Service
metadata:
  name: ticketing-app-service
  labels:
    app: ticketing-app
spec:
  type: NodePort # Creates an AWS Elastic Load Balancer (ELB)
  selector:
    app: ticketing-app
  ports:
    - protocol: TCP
      port: 80         # External Load Balancer Port
      targetPort: 4000 # Container Por
      nodePort: 30080
    - name: http
      protocol: TCP
      port: 9090       # Internal ClusterIP port for metrics
      targetPort: 9090
